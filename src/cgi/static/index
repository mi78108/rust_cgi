#!/usr/bin/env ruby

require_relative '../_init_'
require 'mime/types'

Q.map(:GET, %r{^/static/name/(.*)$}) do |r, resp|
  file = Pathname.new "./static/#{r.match_1}"
  resp.ok(file.read).type("#{MIME::Types.type_for(file.to_s).first}; charset=utf-8").finally if file.exist? && file.file?
  Q.resp_404 "Script Not found File #{file}"
end
